
using Microsoft.Xna.Framework;

namespace XNACube
{
    public class CubePrimitive : GeometricPrimitive
    {
        /// <summary>Creates a Cube</summary>
        public CubePrimitive(float radius) : base()
        {
            CreateVertices(radius);
            CreateIndices();
        }
        void CreateVertices(float radius)
        {                        
            AddVertex(new Vector3(-radius, -radius, -radius));
            AddVertex(new Vector3(-radius, -radius, radius));
            AddVertex(new Vector3(radius, -radius, radius));
            AddVertex(new Vector3(radius, -radius, -radius));
            AddVertex(new Vector3(-radius, radius, -radius));
            AddVertex(new Vector3(-radius, radius, radius));
            AddVertex(new Vector3(radius, radius, radius));
            AddVertex(new Vector3(radius, radius, -radius));
        }

        void CreateIndices()
        {                        
            //bottom face            
            AddIndex(0);
            AddIndex(2);
            AddIndex(3);
            AddIndex(0);
            AddIndex(1);
            AddIndex(2);

            //top face
            AddIndex(4);
            AddIndex(6);
            AddIndex(5);
            AddIndex(4);
            AddIndex(7);
            AddIndex(6);

            //front face
            AddIndex(5);
            AddIndex(2);
            AddIndex(1);
            AddIndex(5);
            AddIndex(6);
            AddIndex(2);

            //back face
            AddIndex(0);
            AddIndex(7);
            AddIndex(4);
            AddIndex(0);
            AddIndex(3);
            AddIndex(7);

            //left face
            AddIndex(0);
            AddIndex(4);
            AddIndex(1);
            AddIndex(1);
            AddIndex(4);
            AddIndex(5);

            //right face
            AddIndex(2);
            AddIndex(6);
            AddIndex(3);
            AddIndex(3);
            AddIndex(6);
            AddIndex(7);            
        }
    }
}
